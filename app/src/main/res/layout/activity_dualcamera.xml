<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context="com.example.gammeeting.DualCameraActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <fragment
            android:id="@+id/fragmentGame"
            android:name="com.example.gammeeting.GameFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="65"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fragmentDetectContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-130dp">

            <fragment
                android:id="@+id/fragmentDetect"
                android:name="com.example.gammeeting.DetectFragment"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintDimensionRatio="1:1" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <Button
        android:id="@+id/buttonGameChoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:text="game"/>

    <Button
        android:id="@+id/buttonWin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="0dp"
        android:text="win" />

    <Button
        android:id="@+id/buttonLose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="0dp"
        android:text="lose" />

    <TextView
        android:id="@+id/textViewTrackingImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="50dp"
        android:text="Tracking Image Name" />

    <include layout="@layout/game_ui_1"
        android:id="@+id/layoutGame1"
        android:visibility="invisible" />

    <include layout="@layout/game_ui_2"
        android:id="@+id/layoutGame2"
        android:visibility="invisible" />

    <include layout="@layout/game_ui_3"
        android:id="@+id/layoutGame3"
        android:visibility="invisible" />
        
</FrameLayout>
