<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gammeeting.SingleCameraActivity">

    <fragment
        android:id="@+id/fragmentGame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.example.gammeeting.GameFragment" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="80dp"
        android:src="@drawable/ready" />

    <Button
        android:id="@+id/buttonGameChoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:text="choice"/>

    <Button
        android:id="@+id/buttonWin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="0dp"
        android:text="win" />

    <Button
        android:id="@+id/buttonLose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="0dp"
        android:text="lose" />

    <Button
        android:id="@+id/buttonStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="0dp"
        android:text="start" />

    <TextView
        android:id="@+id/textViewTrackingImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="50dp"
        android:text="Tracking Image Name" />

    <include layout="@layout/game_ui_1"
        android:id="@+id/layoutGame1"
        android:visibility="invisible" />

    <include layout="@layout/game_ui_2"
        android:id="@+id/layoutGame2"
        android:visibility="invisible" />

    <include layout="@layout/game_ui_3"
        android:id="@+id/layoutGame3"
        android:visibility="invisible" />

</FrameLayout>